{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
	  "correctness": {
		"noUnreachable": "off",
		"noConstantCondition": "off"
	  },
	  "style": {
		"useTemplate": "off",
		"noNonNullAssertion": "off",
		"noUselessElse": "off"
	  },
	  "nursery": {
		"useCollapsedIf": "off"
	  }
    }
  },
  "files": {
    "ignore": [
		"build/**",
		"dist/**"
	]
  }
}
